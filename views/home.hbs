{{#each tasks}}

  <div class="card card-body my-1">
    <div class="d-flex justify-content-between align-items-center">
      <div class="d-flex flex-column ">
        <h3>{{title}}</h3>
        <div>
        <span>{{createdAt}}</span>
        <span class="badge {{#if low}} bg-success{{/if}} {{#if medium}} bg-primary{{/if}} {{#if heigh}} bg-danger{{/if}}">
        {{priority}}</span>
        </div>
      </div>
      <div>
        <a class="btn btn-warning" href="/edit/{{_id}}">EDIT</a>
        <a class="btn btn-danger" href="/delete/{{_id}}">DELETE</a>
      </div>
    </div>

  </div>
{{else}}
  <h3 class="text-center"> No Tasks yet, add one !</h3>
{{/each}}